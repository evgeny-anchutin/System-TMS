Процедура ЗаписьЛога(Текст) Экспорт
	
	ПолноеИмяФайла = "c:\logs\errorlog.txt";
	ТекстЛога = Новый ТекстовыйДокумент;
	ФайлЛога = Новый Файл(ПолноеИмяФайла);
	
	Если ФайлЛога.Существует() Тогда
		ТекстЛога.Прочитать(ПолноеИмяФайла);
	КонецЕсли;
	
	ТекстЛога.ДобавитьСтроку("" + ТекущаяДата() + Символы.Таб + Символы.Таб + Текст);
	ТекстЛога.Записать(ПолноеИмяФайла);
	
